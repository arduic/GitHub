<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main">

	<ImageButton
        android:id="@+id/toolbar_btn_connect"
        style="@style/toolbarButton"
        android:src="@drawable/toolbar_btn_connect"
        android:visibility="gone" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbarbg"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:id="@+id/toolbar_btn_disconnect"
        android:src="@drawable/toolbar_btn_disconnect"
        android:visibility="gone" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_alignParentBottom="true"/>
        
	<android.widget.VerticalSeekBar
    	android:id="@+id/ThrustBar"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_margin="25dp"
		android:visibility="gone"
		android:layout_alignParentLeft="true"/>
	
    <android.widget.VerticalSeekBar
    	android:id="@+id/YawBar"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_margin="25dp"
		android:visibility="gone"
		android:layout_alignParentRight="true"/>
    
    <TextView
        android:id="@+id/ThrustLabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/ThrustBar"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-22dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/ThrustLabel" />
        
    <TextView
        android:id="@+id/YawLabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/YawBar"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-22dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/YawLabel" />
    
    <LinearLayout 
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
		        android:id="@+id/A_Label"
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:layout_margin="2dp"
		        android:gravity="center"
		        android:visibility="gone"
		        android:text="A" />
            <TextView
		        android:id="@+id/A_Text"
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:layout_margin="2dp"
		        android:gravity="center"
		        android:visibility="gone"
		        android:text="@string/A_Text" />
            <Button
		        android:id="@+id/A_Plus"
		        android:visibility="gone" 
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:text="+"
		        android:padding="10dp"
		        android:layout_margin="2dp"/>
            <Button
		        android:id="@+id/A_Minus"
		        android:visibility="gone" 
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:text="-"
		        android:padding="10dp"
		        android:layout_margin="2dp"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
		        android:id="@+id/B_Label"
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:layout_margin="2dp"
