		        android:padding="10dp"
		        android:layout_margin="2dp"/>
            <Button
		        android:id="@+id/C_Minus"
		        android:visibility="gone" 
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:text="-"
		        android:padding="10dp"
		        android:layout_margin="2dp"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
		        android:id="@+id/D_Label"
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:layout_margin="2dp"
		        android:gravity="center"
		        android:visibility="gone"
		        android:text="D" />
            <TextView
		        android:id="@+id/D_Text"
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:layout_margin="2dp"
		        android:gravity="center"
		        android:visibility="gone"
		        android:text="@string/D_Text" />
            <Button
		        android:id="@+id/D_Plus"
		        android:visibility="gone" 
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:text="+"
		        android:padding="10dp"
		        android:layout_margin="2dp"/>
            <Button
		        android:id="@+id/D_Minus"
		        android:visibility="gone" 
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:text="-"
		        android:padding="10dp"
		        android:layout_margin="2dp"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
		        android:id="@+id/p_Label"
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:layout_margin="2dp"
		        android:gravity="center"
		        android:visibility="gone"
		        android:text="p" />
            <TextView
		        android:id="@+id/p_Text"
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:layout_margin="2dp"
		        android:gravity="center"
		        android:visibility="gone"
		        android:text="@string/p_Text" />
            <Button
		        android:id="@+id/p_Plus"
		        android:visibility="gone" 
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:text="+"
		        android:padding="10dp"
		        android:layout_margin="2dp"/>
